{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "incremental": true,
    "declaration": false
  },
  "include": ["src"],
  "exclude": ["build", "node_modules", "src/test"]
}
